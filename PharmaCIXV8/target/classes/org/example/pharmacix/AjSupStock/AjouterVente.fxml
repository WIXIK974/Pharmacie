<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" stylesheets="@../CSS/MenuEtAccueil/styles2.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.pharmacix.AjouterVente">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label text="Numéro de sécurité sociale :" />
    <TextField fx:id="txtNumeroSS" />

    <Label text="ID de personne :" /> <!-- Changé de "Numéro d'employé" à "ID de personne" -->
    <TextField fx:id="txtIdPersonne" /> <!-- Changé de txtNumEmploye à txtIdPersonne -->

    <Label text="Numéro de médicament :" />
    <TextField fx:id="txtNumMedicament" />

    <Label text="Numéro d'ordonnance :" />
    <TextField fx:id="txtNumOrdonnance" />

    <Label text="Quantité vendue :" />
    <TextField fx:id="txtQuantiteVendue" />

    <Button onAction="#validerAjout" text="Valider" />
</VBox>
