    <Label text="Quantité :" />
    <TextField fx:id="quantiteField" />

    <Label text="N° Fournisseur :" />
    <TextField fx:id="fkFournisseurField" />

    <Button onAction="#validerAjout" text="Valider" />
</VBox>
